filegroup(
    name = "data",
    srcs = glob(["ISD*/**"]),
    visibility = ["//visibility:public"],
)

genrule(
    name = "crypto_tar",
    srcs = [":data"],
    outs = ["crypto.tar"],
    cmd = "$(location :gen_crypto_tar.sh) $(location //go/tools/scion-pki:scion-pki) $@",
    tools = [
        "//go/tools/scion-pki:scion-pki",
        ":gen_crypto_tar.sh",
    ],
    visibility = ["//visibility:public"],
)
