#!/bin/bash

echo "Running: ${1:?}"

# Pull CI image and start it
docker pull $SCION_IMG
mkdir -p $SCION_MOUNT
./docker.sh start

# Run test
./tools/ci/"$@"
res=$?

# Pack logs and stop everything
$BASE/pack_logs
res=$((res+$?))
./docker.sh stop
res=$((res+$?))
$BASE/clean_env.sh
res=$((res+$?))
rm -r $SCION_MOUNT
exit $res
