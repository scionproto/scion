#!/bin/bash

. tools/ci/common.sh

./docker.sh build || exit 1
[ -n "$DOCKER_BE" ] && { make -sC docker/perapp || exit 1; }

tmpdir=$(mktemp -d /tmp/artifacts.XXXXXXX)
SCION_MOUNT="$tmpdir" ./docker.sh start || exit 1

result=0
./tools/ci/build
result=$((result+$?))
./tools/ci/lint
result=$((result+$?))
./tools/ci/test
result=$((result+$?))

./tools/ci/integration -a $DOCKER_BE
result=$((result+$?))

echo "Artifacts dir: $tmpdir"

[ $result -eq 0 ] && { ./docker.sh exec ./tools/dc zk down; ./docker.sh stop; }

if [ $result -eq 0 ]; then
    echo "All tests successful"
else
    echo "$result tests failed"
fi
exit $result
