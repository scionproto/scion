load("@rules_go//go:def.bzl", "go_library")
load("//tools/lint:write_source_files.bzl", "write_source_files")

# gazelle:exclude *.gen.go
go_library(
    name = "go_default_library",
    srcs = [
        "default_gen.go",
        "graphs.go",
    ],
    importpath = "github.com/scionproto/scion/pkg/private/xtest/generated",
    visibility = ["//visibility:public"],
    deps = [
        "//pkg/private/xtest/graph:go_default_library",
        "@com_github_golang_mock//gomock:go_default_library",
    ],
)

genrule(
    name = "generate_default",
    srcs = ["//topology:default"],
    outs = ["default_gen.gen.go"],
    cmd = "$(location //pkg/private/xtest/graphupdater:graphupdater) -topoFile=$(location //topology:default) -graphFile=$@",
    tools = ["//pkg/private/xtest/graphupdater"],
)

write_source_files(
    name = "write_files",
    files = {
        "default_gen.go": ":generate_default",
    },
)
