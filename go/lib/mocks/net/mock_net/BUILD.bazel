load("@io_bazel_rules_go//go:def.bzl", "go_library")
load("@com_github_jmhodges_bazel_gomock//:gomock.bzl", "gomock")

gomock(
    name = "go_default_mock",
    out = "mock.go",
    interfaces = [
        "Addr",
        "Conn",
        "PacketConn",
    ],
    library = "//go/lib/mocks/net:go_default_library",
    package = "mock_net",
