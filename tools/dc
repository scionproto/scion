cmd_help() {
	echo
	cat <<-_EOF
	Usage:
	    $PROGRAM scion [docker-compose command]
	        Run docker-compose command for scion services.
	    $PROGRAM utils [docker-compose command]
	        Run docker-compose command for util services.
	    $PROGRAM tester [command]
	        Run a command in the `tester` container.
	_EOF
}

cmd_scion() {
    COMPOSE_FILE="gen/base-dc.yml:gen/scion-dc.yml" docker-compose --no-ansi "$@"
}

cmd_utils() {
    COMPOSE_FILE="gen/base-dc.yml:gen/utils-dc.yml" docker-compose --no-ansi "$@"
}

cmd_tester() {
    COMPOSE_FILE="gen/base-dc.yml:gen/utils-dc.yml" docker-compose exec tester "$@"
}

PROGRAM="${0##*/}"
COMMAND="$1"
shift

case "$COMMAND" in
    scion|tester|utils)
        "cmd_$COMMAND" "$@" ;;
    *)  cmd_help; exit 1 ;;
esac
