load("@rules_python//python:defs.bzl", "py_binary")
load("@com_github_scionproto_scion_python_deps//:requirements.bzl", "requirement")

sh_binary(
    name = "docker_ip",
    srcs = ["docker-ip"],
    visibility = ["//visibility:public"],
)

