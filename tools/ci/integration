#!/bin/bash

set -ex

docker container exec ${1:-scion_ci} bash -c "./scion.sh topology -d"
docker cp ${1:-scion_ci}:/home/scion/go/src/github.com/scionproto/scion/gen .
docker cp ${1:-scion_ci}:/home/scion/go/src/github.com/scionproto/scion/gen-cache .
docker cp ${1:-scion_ci}:/home/scion/go/src/github.com/scionproto/scion/gen-certs .
./scion.sh start nobuild
sleep 40
./integration/integration_test.sh docker
