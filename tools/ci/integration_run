#!/bin/bash

. tools/ci/common.sh

sleep 15
result=0

if [ -z "$DOCKER" ]; then
# Go infra tests
./docker.sh exec "set -eo pipefail; integration/go_infra |& tee -a logs/integration.run"
result=$((result+$?))
fi

if [ -n "$ALL" ]; then
    # Python integration tests
    ./docker.sh exec "set -eo pipefail; integration/py_integration $DOCKER |& tee -a logs/integration.run"
    result=$((result+$?))
fi

# Go integration tests
./docker.sh exec "set -eo pipefail; integration/go_integration $DOCKER |& tee -a logs/integration.run"
result=$((result+$?))

# Revocation test
./docker.sh exec "set -eo pipefail; integration/revocation_test.sh $DOCKER |& tee -a logs/integration.run"
result=$((result+$?))

if [ $result -eq 0 ]; then
    echo "========> ($(date -u --rfc-3339=seconds)) All integration tests successful"
else
    echo "========> ($(date -u --rfc-3339=seconds)) $result integration tests failed"
fi

# Stop scion
./docker.sh exec "set -eo pipefail; ./scion.sh status && ./scion.sh stop |& tee -a logs/integration.run"

# Make sure all compose controlled containers are stopped
if [ -n "$DOCKER" ]; then
    ./docker.sh exec "set -eo pipefail; ./tools/dc down |& tee -a logs/integration.run"
fi

exit $result
