#!/bin/bash

pathadd() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="${PATH:+"$PATH:"}$1"
    fi
}

pathadd $HOME/.local/bin 
printenv PATH

if ! which bazel > /dev/null; then
  echo "--- Install bazel/bazelisk"
  tools/install_bazel
fi

which bazel

sudo yum groupinstall -y "Development Tools"
pip3 install --require-hashes -r tools/env/pip3/requirements.txt
